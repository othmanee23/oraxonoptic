cat > .gitignore <<'EOF'
# OS junk
.DS_Store

# Env / secrets
.env
frontend/.env
backend/.env

# Dependencies / build
**/node_modules/
**/vendor/
**/dist/
frontend/dist.zip

# Logs
**/*.log

# DB dumps
*.sql

# Big media / archives
*.mp4
*.mov
*.zip
*.rar
*.7z

# Bun lock binary (optional)
frontend/bun.lockb
EOF
